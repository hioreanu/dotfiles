#!/bin/bash
# $Id$

case $RANDOM
in
	*0) color=000020 ;;
	*1) color=001020 ;;
	*2) color=001030 ;;
	*3) color=002020 ;;
	*4) color=002030 ;;
	*5) color=101020 ;;
	*6) color=101030 ;;
	*7) color=102020 ;;
	*8) color=102030 ;;
	*9) color=202030 ;;
esac

export PATH="$PATH:/bin:/usr/X11R6/bin"
if /bin/ps auxww | /bin/fgrep XWin > /dev/null 2>&1 ; then : ; else
	XWin -multiwindow -clipboard -silent-dup-error -emulate3buttons > /dev/null 2>&1&
fi

if [ -f "$HOME/.ssh/id_dsa.pub" -a -z "$SSH_AGENT_PID" ] ; then
	SSH_AGENT_PID="`ps auxww | awk '/[s]sh-agent/ {print $1}'`"
	export SSH_AGENT_PID
	if [ -z "$SSH_AGENT_PID" ] ; then
		eval `ssh-agent` > /dev/null 2>&1
	else
		SSH_AUTH_SOCK="`echo /tmp/ssh-*/agent.*`"
	fi
	export SSH_AGENT_PID SSH_AUTH_SOCK
fi

export DISPLAY=:0.0
cd "$HOME"
if [ $# = 0 ] ; then
	/usr/bin/xterm -tn xtermc -xrm "xterm.VT100.background:#$color" > /dev/null 2>&1&
else
	/usr/bin/xterm -tn xtermc -xrm "xterm.VT100.background:#$color" -e "$@" > /dev/null 2>&1&
fi
